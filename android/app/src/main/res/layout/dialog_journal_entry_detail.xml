<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entry Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="September 15, 2024"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDetailMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood: ðŸ˜"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy: ðŸ”‹ðŸ”‹ðŸ”‹"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDetailCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Personal"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Home"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDetailTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags: gratitude, wellness"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full content of entry"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

</ScrollView>

