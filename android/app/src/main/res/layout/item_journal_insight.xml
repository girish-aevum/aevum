<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="14dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvInsightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insight title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvInsightType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood Pattern"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvInsightDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of the AI insight will appear here."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxLines="4"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvInsightDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generated on Sep 14"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

