# Aevum Health Platform Environment Configuration

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,10.0.2.2
SITE_URL=http://localhost:8080/

# Database Configuration (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/aevum_health

# JWT Token Configuration
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=1

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
CONTACT_EMAIL=support@aevum.co.in
ADMIN_EMAIL=admin@aevum.co.in

# Pagination Configuration
# Standard pagination for most listing APIs
PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Large pagination for APIs with potentially large datasets
LARGE_PAGE_SIZE=50
MAX_LARGE_PAGE_SIZE=200

# Small pagination for APIs with typically smaller datasets
SMALL_PAGE_SIZE=10
MAX_SMALL_PAGE_SIZE=50

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# API Rate Limiting (if implemented)
API_RATE_LIMIT=100  # requests per minute

# Logging Level
LOG_LEVEL=INFO

# Cache Configuration (if using Redis)
# REDIS_URL=redis://localhost:6379/0

# AI / LLM Configuration
# Groq API for AI Companion
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama3-70b-8192

# External API Keys (if needed)
# OPENAI_API_KEY=your-openai-api-key
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key 